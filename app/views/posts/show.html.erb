<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<%= form_for [@post, Comment.new] do |f| %>
  <%= f.label :body, "New Comment"  %> <br />
  <%= f.text_area :body %> <br />
  <%= f.submit "Add Comment" %>
<% end %>

<div class="comments">
  <%= render :partial => @post.comments %>
</div>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
