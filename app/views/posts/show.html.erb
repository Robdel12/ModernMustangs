<p id="notice"><%= notice %></p>

<h1><%= @post.title %></h1>

<p><%= @post.body %></p>

<% if user_signed_in? %>
  <%= form_for [@post, Comment.new] do |f| %>
    <%= f.label :body, "New Comment"  %> <br />
    <%= f.text_area :body %> <br />
    <%= f.submit "Add Comment" %>
  <% end %>
<% else %>
  <h2>Want to comment? <%= link_to "Login", new_user_session_path %> or <%= link_to "sign up", new_user_registration_path %></h2>
<% end %>

<div class="comments">
  <%= render :partial => @post.comments %>
</div>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
